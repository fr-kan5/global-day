<%= render 'shared/second_header' %>

  <div class="card__wrapper">
    <% @posts.each do |post| %>
      <%= link_to post_path(post.id) do %>
        <div class="card">
          <%= image_tag post.image, class:"post-img" if post.image.attached?%>
      

            <div class="post_body">
              <div class="card__body">
                <span class="like-btn">
                  <div id="like-btn-<%= post.id %>" class="like-btn-id">
                    <%= render 'likes/like', post: post %>
                  </div>
                </span>
                <h3 class="card__title"><%= post.title%></h3>
              </div>

              <div class="card__body">
              <span class="card__place">
                üåê   <%= post.place %>
                  </span>
              </div>

              <div class="post-text">
                <p class="post-text"><%= truncate(post.text, :length => 80) do %> 
                  <%= link_to "...more", post_path(post.id) %>
                </p>
                <%end%>
              </div> 
            </div>
         </div>
      <%end%>
    <% end %>
  </div>

