<%= render 'shared/header' %>
<div class="devise">
<h2 class="title">Sign Up</h2>

<div class="form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="name-form">
  <div class="form-group">
    <%= f.label "名前", class:"form-text"%>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"textarea", id:"user-name" %>
  </div>
  </div>
 
    <div class="form-group">
    <%= f.label "プロフィール画像", class:"form-text" %>
    <%= f.file_field :avatar %> 
    <div id="image-list", class="avatar-img"></div>
    </div>

  <div class="form-group">
    <%= f.label "メールアドレス", class:"form-text" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"textarea" %>
  </div>

  <div class="form-group">
    <%= f.label "パスワード", class:"form-text" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字英数字)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"textarea" %>
  </div>

  <div class="form-group">
    <%= f.label "パスワード確認", class:"form-text" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"textarea" %>
  </div>

  <div class="form-group">
    <%= f.label "出身国", class:"form-text" %>
    <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class:"input-default", id:"country"}) %>
  </div>

  <div class="form-group">
      <label class="form-text">生年月日</label>
    
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  " 年 ", " 月 ") + " 日 " %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "自己紹介", class:"form-text" %>
    <%= f.text_area :profile, autofocus: true, class:"input-text", id:"profile" %>
</div>
</div>


  <div class="actions">
    <%= f.submit "Sign up", class:"submit-btn" %>
  </div>

<% end %>

 <%= render "devise/shared/links" %>
</div>
</div>
 