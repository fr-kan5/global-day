<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <div class="name-form">
  <div class="form-group">
    <%= f.label "名前", class:"form-text"%>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"textarea", id:"user-name" %>
  </div>
  </div>
 
    <div class="form-group">
    <%= f.label "プロフィール画像", class:"form-text" %>
    <%= f.file_field :avatar %> 
      <div id="image-list", class="avatar-img"></div>
    </div>


  <div class="form-group">
    <%= f.label "自己紹介", class:"form-text" %>
    <%= f.text_area :profile, autofocus: true, class:"input-text", id:"profile" %>
</div>
</div>


  <div class="actions">
    <%= f.submit "UPDATE", class:"submit-btn" %>
  </div>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
